<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_weight="1"
              android:layout_height="wrap_content">
           <TextView
                android:id="@+id/reviewGroup_Title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="2dp"
                android:textSize="20dp"
                android:maxLength="25"
                android:text="Review Title"/>
        <TextView
                android:id="@+id/reviewGroup_Review"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="13dp"
                android:text="Review Comment"/>
        <TextView
                android:id="@+id/reviewGroup_ReviewerNameDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="13dp"
                android:text="Mr. Jansen    2012/01/01"/>
    <TextView
            android:id="@+id/reviewGroup_VoteCount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="13dp"
            android:text="Votes"
            android:gravity="right"/>
        <RatingBar android:id="@+id/reviewGroup_rating"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:numStars="5"
                   android:isIndicator="true"
                   android:stepSize="1" />
</LinearLayout>